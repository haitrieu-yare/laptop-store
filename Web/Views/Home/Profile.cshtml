@model laptop_store.Models.User
@{
    ViewData["Title"] = "Profile";
}


<div class="py-5 text-center">
    <img class="mb-4" src="/android-chrome-512x512.png" alt="" width="72" height="72">
    <h2>Your Profile</h2>

</div>
<div class="d-flex justify-content-center">
    <form method="post" asp-controller="Home" asp-action="ChangeProfile">
        <div class="row d-flex justify-content-between">
            <h4 class="mb-3">Profile</h4>
            <input type="button" id="ChangeInfo" class="btn btn-info" value="Detail" onclick="changeInfo()" />
        </div>
        <div class="mb-3">
            <label>Role</label>
            <input type="text" class="form-control" value="@(Model.UserRole)" disabled />
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input type="email" class="form-control" value="@(Model.UserEmail)" disabled />
        </div>
        <div class="mb-3">
            <label>Name</label>
            <input type="text" class="form-control" id="UserName" value="@(Model.UserName)" disabled="" />
        </div>
        <div class="mb-3">
            <label>Address</label>
            <input type="text" class="form-control" id="UserAddress" placeholder="No Information" value="@(Model.UserAddress)" disabled="" />
        </div>
        <div class="mb-3">
            <label>Phone</label>
            <input type="text" class="form-control" id="UserPhone" placeholder="No Information" value="@(Model.UserPhone)" disabled="" />
        </div>
        @if (ViewData["EnterInformartion"] != null)
        {
            <div class="alert alert-danger" role="alert">@ViewData["EnterInformartion"]</div>
        }
        <input type="submit" id="SubmitChange" class="btn btn-primary" value="Submit Change" disabled="" />
    </form>
</div>

<script>
    function changeInfo() {
        if ($(this).prop("value") == "Detail") {
            $('#UserName').prop("disabled", false);
            $('#UserAddress').prop("disabled", false);
            $('#UserPhone').prop("disabled", false);
            $(this).prop({
                "class": "btn btn-danger"
            });
            $("#SubmitChange").prop("disabled", false);
        } else {
            $('#UserName').prop("disabled", true);
            $('#UserAddress').prop("disabled", true);
            $('#UserPhone').prop("disabled", true);
            $(this).attr("class", "btn btn-info");
            $("#SubmitChange").prop("disabled", true);
        }
    }
</script>