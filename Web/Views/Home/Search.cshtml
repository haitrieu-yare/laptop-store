@model System.Data.DataTable
@{
    ViewData["Title"] = "Search Result";
}

<div class="py-5 text-center">
    <img class="mb-4" src="/android-chrome-512x512.png" alt="" width="72" height="72">
    <h2>Search Result</h2>
</div>
<div class="row">
    <div class="col-md-12 order-md-2 mb-4">
        <form id="formDetail" method="post" asp-controller="Home" asp-action="Detail">
            <div class="list-group mb-3">
                @for (int i = 0; i < Model.Rows.Count; i++)
                {
                    <button type="submit" onclick="chosenLaptop(@(Model.Rows[i]["LaptopID"]))" class="list-group-item d-flex lh-condensed">
                        <h6 class="align-items-center">@(Model.Rows[i]["LaptopName"])</h6>
                        <span class="text-muted ml-auto mr-2">@(Model.Rows[i]["LaptopPrice"])₫</span>
                    </button>
                }
            </div>
        </form>
    </div>
</div>

<script>
    function chosenLaptop(laptopID) {
        $('#formDetail').append('<input type="hidden" name="laptopID" value="' + laptopID + '" />');
    }
</script>
